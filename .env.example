# VIPA License Bot â€” Environment Variables
# Copy this to .env and fill in your values

# Discord Bot (create a SEPARATE bot application for the license bot)
DISCORD_TOKEN=your_license_bot_token_here
GUILD_ID=your_server_id

# Channels
LICENSE_CHECK_CHANNEL_ID=0
HIRING_LOG_CHANNEL_ID=0

# Roles (must match onboarding bot)
STUDENT_ROLE_ID=0
LICENSED_AGENT_ROLE_ID=0

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# License monitoring
LICENSE_CHECK_INTERVAL_HOURS=168
LICENSE_CHECK_ENABLED=true

# Database (MUST point to the SAME database as onboarding-bot)
DATABASE_URL=sqlite:///onboarding.db

# Logging
LOG_LEVEL=INFO
